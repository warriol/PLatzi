@model IEnumerable<Desafio3_1_MVC.Models.Imagen>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Imagenes</h2>

<p>
    @Html.ActionLink("Agregar Imagen", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Formato <!-- @Html.DisplayNameFor(model => model.FormatoImagen) -->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            Ruta <!-- @Html.DisplayNameFor(model => model.Patch) -->
        </th>
        <th>
            Ancho <!-- @Html.DisplayNameFor(model => model.TamanoWidth) -->
        </th>
        <th>
            Alto <!-- @Html.DisplayNameFor(model => model.TamanoHeight) -->
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FormatoImagen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patch)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TamanoWidth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TamanoHeight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
